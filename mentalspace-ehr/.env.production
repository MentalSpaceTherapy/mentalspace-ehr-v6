# Production Environment Configuration

NODE_ENV=production
APP_VERSION=1.0.0

# API Configuration
API_PORT=5000
API_URL=https://api.mentalspace-ehr.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=mentalspace_prod
DB_PASSWORD=secure_production_password
DB_DATABASE=mentalspace_prod

# JWT Configuration
JWT_SECRET=production_jwt_secret_key_should_be_very_long_and_complex
JWT_EXPIRE=1d
JWT_COOKIE_EXPIRE=1

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://mentalspace-ehr.com
VITE_API_URL=https://api.mentalspace-ehr.com/api
VITE_APP_VERSION=1.0.0
VITE_ENCRYPTION_KEY=production_encryption_key_should_be_very_long_and_complex

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password_for_production

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@mentalspace-ehr.com
SMTP_PASSWORD=secure_smtp_password_for_production
EMAIL_FROM=notifications@mentalspace-ehr.com

# Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=mentalspace-production-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your_production_s3_access_key
S3_SECRET_KEY=your_production_s3_secret_key

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
CORS_ORIGIN=https://mentalspace-ehr.com
SESSION_SECRET=production_session_secret_key_should_be_very_long_and_complex

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mentalspace-backups
