# Staging Environment Configuration

NODE_ENV=staging
APP_VERSION=1.0.0

# API Configuration
API_PORT=5000
API_URL=https://api-staging.mentalspace-ehr.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=mentalspace_staging
DB_PASSWORD=secure_staging_password
DB_DATABASE=mentalspace_staging

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_should_be_very_long_and_complex
JWT_EXPIRE=1d
JWT_COOKIE_EXPIRE=1

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=https://staging.mentalspace-ehr.com
VITE_API_URL=https://api-staging.mentalspace-ehr.com/api
VITE_APP_VERSION=1.0.0
VITE_ENCRYPTION_KEY=staging_encryption_key_should_be_very_long_and_complex

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@mentalspace-ehr.com
SMTP_PASSWORD=secure_smtp_password
EMAIL_FROM=notifications@mentalspace-ehr.com

# Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=mentalspace-staging-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# Logging Configuration
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
CORS_ORIGIN=https://staging.mentalspace-ehr.com
SESSION_SECRET=staging_session_secret_key_should_be_very_long_and_complex
